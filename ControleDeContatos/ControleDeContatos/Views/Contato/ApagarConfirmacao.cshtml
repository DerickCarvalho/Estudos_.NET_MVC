@model ContatoModel
@{
    ViewData["Title"] = "Confirmação para apagar contato";
}

<div class="text-center">
    <h3>Realmente deseja apagar o contato (@Model.Nome)?</h3>
</div>

<a role="button" class="btn btn-primary" asp-controller="Contato" asp-action="Index">Não</a>
<a role="button" class="btn btn-danger" asp-controller="Contato" asp-route-id="@Model.Id" asp-action="Apagar">Sim</a>